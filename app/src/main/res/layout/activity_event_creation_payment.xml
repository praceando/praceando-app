<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/shape_background_linear_color"
    tools:context=".EventDetails.EventCreationPayment">


    <ImageView
        android:id="@+id/returnArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_rounded_arrow"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_rounded_container"
        android:layout_marginTop="68dp"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Novo Evento"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/rosaEscuraoClaro"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">


        <TextView
            android:id="@+id/durationDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="tempo de duração do anuncio\n14/04 - 16/04"
            android:textColor="@color/rosaEscurao"
            android:fontFamily="@font/montserrat_medium"
            android:textStyle="bold"
            android:textSize="17.5sp"
            android:gravity="center"
            android:layout_marginHorizontal="45dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="O anuncio é cobrado por dia exposto, cada dia tem o custo de R$3.50"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:id="@+id/adDescription"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="seu anuncio ficara exposto durante 3 dias, totalizando R$9.50"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            />


        <View
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:background="@color/rosa"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="30dp"
            />

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="O pagamento é realizado via pix, escaneie o QRcode para realizar sua compra!"
            android:textColor="@color/rosaEscurao"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/img_qrcode"
            android:layout_marginVertical="20dp"
            />

        <TextView
            android:id="@+id/adPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$1.99"
            android:textColor="@color/rosaEscurao"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="23sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            />


    </LinearLayout>

    <Button
        android:id="@+id/finishBtn"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/rosaEscuraoClaro"
        android:layout_gravity="center_horizontal|bottom"
        android:text="Finalizar"
        android:textColor="@color/white"
        android:layout_marginBottom="25dp"
        />

</FrameLayout>