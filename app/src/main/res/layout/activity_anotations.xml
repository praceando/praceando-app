<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calendar.Anotations"
    android:background="@color/cinzaClarinho">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rosaClaro">

            <ImageView
                android:id="@+id/saveBtn"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_arrow"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:rotation="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/rosaEscurao"
                android:fontFamily="@font/montserrat_semibold"
                android:height="70dp"
                android:textSize="20sp"
                android:text="Minhas Anotações"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="bottom"
            android:textColor="@color/cinzaEscuro"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="10sp"
            android:layout_marginEnd="5dp"
            android:text="Salvamento automático"/>


        <EditText
            android:id="@+id/annotations"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:scrollbars="vertical"
            android:fontFamily="@font/montserrat_medium"
            android:height="70dp"
            android:textSize="15sp"
            android:gravity="start"
            android:background="@color/cinzaClarinho"
            android:text=""/>

    </LinearLayout>

</FrameLayout>