<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rounded_container"
    android:orientation="vertical">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:background="@drawable/shape_rounded_container"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Como você avaliaria Hot Dog Sr Antonio?"
        android:textColor="@color/rosaEscurao"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginHorizontal="25dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_marginVertical="25dp"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="false"
        android:rating="0"
        style="@style/CustomRatingBarStyle"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the. "
            android:textColor="@color/black"
            android:textSize="12sp"
            android:paddingHorizontal="17dp"
            android:paddingVertical="10dp"
            android:orientation="vertical"
            android:background="@drawable/shape_comment">

            <EditText
                android:id="@+id/comment"
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:maxLines="10"
                android:textColor="@color/black"
                android:textSize="15.5sp"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Deixe um comentário"
                android:gravity="start"
                android:background="@color/white"
                />

        </LinearLayout>
        <Button
            android:id="@+id/reviewBtn"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_gravity="end|bottom"
            android:backgroundTint="@color/rosaEscuro"
            android:text="Avaliar"
            android:textSize="12sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>

</LinearLayout>