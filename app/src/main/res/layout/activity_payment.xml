<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_linear_color"
    tools:context=".Payment">

    <View
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_gravity="bottom"
        android:background="@drawable/background_white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="710dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/productTitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Avatar Futuristica"
            android:textColor="@color/rosaEscurao"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="27sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/productDescription"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Avatar feio padrão descrição dele aaaaa lindo lindo"
            android:textColor="@color/rosaEscurao"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="17dp"
            />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$1.99"
            android:textColor="@color/rosaEscurao"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_marginTop="15dp"
            />

            <View
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:background="@color/rosa"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="20dp"
                />

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="O pagamento é realizado via pix, escaneie o QRcode para realizar sua compra!"
            android:textColor="@color/rosaEscurao"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/qrcode"
            android:layout_marginVertical="20dp"
            />

        <Button
            android:id="@+id/finishBtn"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/rosaEscurao"
            android:layout_gravity="center_horizontal"
            android:text="Finalizar"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            />


    </LinearLayout>


</FrameLayout>