<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/rosaClaro">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_gravity="bottom"/>

    <TextView
        android:id="@+id/title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:textSize="16sp"
        android:text="Hot dog Sr. Antonio"
        android:textColor="@color/rosaEscurao"
        android:fontFamily="@font/montserrat_semibold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="19dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_location"/>

        <TextView
            android:id="@+id/locale"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Parque Heróis da FEB"
            android:textColor="@color/rosaEscurao"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:textSize="12sp" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_calendar_item"/>

        <TextView
            android:id="@+id/date"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="14/07/2024 - 14/07/2024"
            android:layout_marginStart="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/rosaEscurao"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_clock"/>

        <TextView
            android:id="@+id/time"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="5dp"
            android:text="9:30 - 17:00"
            android:gravity="center_vertical"
            android:textColor="@color/rosaEscurao"
            android:textSize="12sp" />
      </LinearLayout>

    </LinearLayout>

